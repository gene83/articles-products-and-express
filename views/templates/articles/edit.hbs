{{#with article}}

<h1>Edit Article: {{title}}</h1>

<form action="/articles/{{url_title}}?_method=PUT" method='POST' enctype="application/x-www-form-urlencoded">
  Title
  <input type="text" name="title" placeholder="{{title}}">
  Author:
  <input type="text" name="author" placeholder="{{author}}">
  Inventory:
  <input type="text" name="body" placeholder="{{body}}">
  <input type="submit">
</form>

<form action="/articles/{{url_title}}?_method=DELETE" method="POST" enctype="application/x-www-form-urlencoded">
  <input type="submit" value="Remove">
</form>

{{/with}}