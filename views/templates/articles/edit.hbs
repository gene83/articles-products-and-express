{{#with article}}
<h1>Edit Article: {{title}}</h1>

<form action="/articles/{{urlTitle}}?_method=PUT" method='POST' enctype="application/x-www-form-urlencoded">
  Title
  <input type="text" name="title" placeholder="{{title}}">
  Author:
  <input type="text" name="author" placeholder="{{author}}">
  Inventory:
  <input type="text" name="body" placeholder="{{body}}">
  <input type="submit">
</form>
{{/with}}

{{#if errorData}}
{{#each errorData.errors}}
<h3>{{this}}</h3>
{{/each}}
{{/if}}